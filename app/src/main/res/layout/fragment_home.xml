<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.synnapps.carouselview.CarouselView
    android:id="@+id/carousel"
    android:layout_width="416dp"
    android:layout_height="200dp"
    app:radius="5dp"
    app:slideInterval="3000"
    app:strokeColor="@color/colorBlack"
    app:strokeWidth="3dp"
    app:fillColor="@color/colorWhite"
    app:pageColor="@color/colorWhite"/>

    <TextView
        android:text="Categories"
        android:textSize="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/ic_restaurant_menu_green_24dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="40dp"/>
        <ImageView
            android:background="@drawable/ic_local_drink_green_24dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:background="@drawable/ic_cake_green_24dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:background="@drawable/ic_local_dining_black_24dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="23dp"
            android:text="Restaurants" />

        <TextView
            android:text="Liquors"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Bakeries"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Refreshment"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </LinearLayout>
    <TextView
        android:text="Super 7"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Change your taste bud everyday"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:src="@drawable/burgerad"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="20% Discount"
            android:textSize="50dp"
            android:textColor="@color/colorBlack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/pizzaad"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="25% Discount"
            android:textSize="50dp"
            android:textColor="@color/colorBlack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/weirdad"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="15% Discount"
            android:textSize="50dp"
            android:textColor="@color/colorBlack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:background="@drawable/freedelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
</ScrollView>